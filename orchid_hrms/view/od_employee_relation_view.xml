<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <record model="ir.ui.view" id="od_employee_relation_tree">
        <field name="name">od.employee.relation</field>
        <field name="model">od.employee.relation</field>
        <field name="arch" type="xml">
            <tree>
                  <field name="name"/>
            </tree>
       </field>
    </record>
  <record model="ir.ui.view" id="od_employee_relation_form">
        <field name="name">od.employee.relation</field>
        <field name="model">od.employee.relation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                  <group>
                      <group>
                         <label for="name" class="oe_edit_only"/>
                         <h2><field name="name"/></h2>
                      </group>
                      <group></group>
                  </group>
                  <group>
                           <field name="notes"/>
                  </group>
       </sheet>
    </form>
  </field>
 </record>
<record model="ir.actions.act_window" id="action_od_employee_relation">
        <field name="name">Relation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">od.employee.relation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
         <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add new Relation. 
          </p>
        </field>
    </record>
 </data>
</openerp>
