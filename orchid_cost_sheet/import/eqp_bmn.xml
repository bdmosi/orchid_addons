<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="od_eqp_bmn_line_tree">
            <field name="name">Equipment BMN</field>
            <field name="model">od.bmn.eqp.cov.line</field>
            <field name="arch" type="xml">
                <tree string="Optional">
                      <field name="cost_sheet_id"/>

                      <field name="item" invisible="0"/>
                      <field name="manufacture_id"/>
                      <field name="product_p_n" string="Part Number"/>
                      <field name="serial_no"/>
                      <field name="city_id"/>
                      <field name="location"/>
                      <field name="notes"/>
                </tree>
            </field>
        </record>
        <record id="od_eqp_bmn_search" model="ir.ui.view">
            <field name="name">od.bmn.eqp.cov.line.search</field>
            <field name="model">od.bmn.eqp.cov.line</field>
            <field name="arch" type="xml">
                <search string="Equipment BMN">
                     <field name="cost_sheet_id"/>

                    <group expand="0" string="Group By">
                        <filter string="Cost Sheet" name="costsheet" icon="terp-partner"  context="{'group_by':'cost_sheet_id'}" help="Cost Sheet"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_od_eqp_bmn_line">
            <field name="name">Equipment BMN</field>
            <field name="res_model">od.bmn.eqp.cov.line</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_costsheet': 1}</field>
        </record>



        <menuitem name="Equipment BMN" id="menu_bmn_eqp_coverd_line" parent="menu_od_cost_sheet_import_export"
            action="action_od_eqp_bmn_line" />

    </data>
</openerp>
