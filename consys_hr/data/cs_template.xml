<?xml version="1.0" encoding="utf-8"?>
	<openerp>
    <data noupdate="0">
  
  
   <record id="cs_emp_hiring_email_template" model="email.template">
            <field name="name">Employee Hiring</field>
            <field name="email_from">info@consyst.com</field>
            <field name="subject">Interview Call</field>
            <field name="email_to">${object.email_from}</field>
            <field name="model_id" ref="model_hr_applicant"/>
            <field name="auto_delete" eval="True"/>
<!--             <field name="lang">${object.partner_id.lang}</field> -->
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
	<p>Dear ${object.partner_name or 'Candidate'},</p>
	<p>Congratz</p>
	
	
	<p>You are selected to first interview</p>
	
</div>            
            ]]></field>
        </record>
        
        
        <record id="cs_emp_form_fill_email_template" model="email.template">
            <field name="name">Employee Form Fill</field>
            <field name="email_from">info@consyst.com</field>
            <field name="subject">Form Fill</field>
            <field name="email_to">${object.work_email}</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
<!--             <field name="lang">${object.partner_id.lang}</field> -->
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
	<p>Dear ${object.name or 'Candidate'},</p>
	<p>Hai</p>
	
	
	<p>You are requested to fill your personal data from the url link provided below</p>
	<p>http://192.168.0.106:8069/form/fill/${object.id}<p>
	
</div>            
            ]]></field>
        </record>
       </data>
      </openerp>
       