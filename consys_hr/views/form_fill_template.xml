<data>

<template id="employee_form">
    <t t-call="website.layout">
        <t t-set="additional_title">Fill the Form</t>
        <div id="wrap">
            <div class="container">
                <h1 class="text-center">
                    Employee Pesonal Data Entry Form
                </h1>
                <h2 t-if="employee" class="text-center text-muted">
                    <span t-field="employee.name"/>
                </h2>
<script type="text/javascript">
RelationRow=0;
FamilyRow=0;
AcademicRow=0;
ProjectRow=0;
function addNewRelationRow()
{
var $container =$("#dvRelation");
var $row = $("<div></div>")
					.addClass("col-md-10 col-md-offset-2")
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","eg English").attr("name","txt1_"+RelationRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Yes or No").attr("name","txt2_"+RelationRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Yes or No").attr("name","txt3_"+RelationRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Yes or No").attr("name","txt4_"+RelationRow))											
							)
					
					.append($("<div></div>").addClass("col-md-2")
											.append(
												$("<a></a>")
												.addClass("btn glyphicon glyphicon-trash ")
												.attr("href","#")
												.attr("onclick","removeRelationRow(this);")
												)
											
							);
					RelationRow = RelationRow + 1;
					$('#rowcount').val(RelationRow);
$container.append($row);

}

function addFamilyRow()
{
var $container =$("#dvFamily");
var $row = $("<div></div>")
					.addClass("col-md-12 col-md-offset-2")
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Name").attr("name","f1_"+FamilyRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Mother/Father").attr("name","f2_"+FamilyRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","25").attr("name","f3_"+FamilyRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Teacher").attr("name","f4_"+FamilyRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Yes or No").attr("name","f5_"+FamilyRow))											
							)
					
					.append($("<div></div>").addClass("col-md-2")
											.append(
												$("<a></a>")
												.addClass("btn glyphicon glyphicon-trash ")
												.attr("href","#")
												.attr("onclick","removeFamilyRow(this);")
												)
											
							);
					FamilyRow = FamilyRow + 1;
					$('#familycount').val(FamilyRow);
$container.append($row);

}
function addAcademicRow()
{
var $container =$("#dvAcademy");
var $row = $("<div></div>")
					.addClass("col-md-12 col-md-offset-2")
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","date").attr("name","a1_"+AcademicRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","date").attr("name","a2_"+AcademicRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Degree").attr("name","a3_"+AcademicRow))											
				             )
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Mark").attr("name","a4_"+AcademicRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("placeholder","Regular/Correspondent").attr("name","a5_"+AcademicRow))											
							)
					
					.append($("<div></div>").addClass("col-md-2")
											.append(
												$("<a></a>")
												.addClass("btn glyphicon glyphicon-trash ")
												.attr("href","#")
												.attr("onclick","removeFamilyRow(this);")
												)
											
							);
					AcademicRow = AcademicRow + 1;
					$('#academycount').val(AcademicRow);
$container.append($row);

}

function addProjectRow()
{
var $container =$("#dvProject");
var $row = $("<div></div>")
					.addClass("col-md-12 col-md-offset-2")
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","date").attr("name","p1_"+ProjectRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","date").attr("name","p2_"+ProjectRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("name","p3_"+ProjectRow))											
							)
					.append($("<div></div>").addClass("col-md-2")
											.append($("<input />").attr("type","text").attr("name","p4_"+ProjectRow))											
							)
					
					.append($("<div></div>").addClass("col-md-2")
											.append(
												$("<a></a>")
												.addClass("btn glyphicon glyphicon-trash ")
												.attr("href","#")
												.attr("onclick","removeRelationRow(this);")
												)
											
							);
					ProjectRow = ProjectRow + 1;
					$('#projectcount').val(ProjectRow);
$container.append($row);

}

function removeRelationRow(sender)
{
	$(sender).parents(".col-md-10").remove();
	
}

function removeFamilyRow(sender)
{
	$(sender).parents(".col-md-12").remove();
	
}

</script>

 			  <style>
						   h3 {
						    color:blue;
