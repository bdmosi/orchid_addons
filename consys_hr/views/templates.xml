<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
		
	<template id="website_hr_recruitment.apply">
    <t t-call="website.layout">
        <t t-set="additional_title">Apply Job</t>
        <div id="wrap">
            <div class="container">
                <h1 class="text-center">
                    Job Application Form
                </h1>
                <h2 t-if="job" class="text-center text-muted">
                    <span t-field="job.name"/>
                </h2>
				
				 <style>
							.expcls{
								 display:none;
								}
						   h3 {
						    color:blue;
						   }
			  </style>
			  <script type="text/javascript">
		       				function calculateAge(dob) {
                             var dob = $('#date').val();
							 if(dob != ''){
								    dob = new Date(dob);
									var today = new Date();
									var age = Math.floor((today-dob) / (365.25 * 24 * 60 * 60 * 1000));
									$( "#age" ).val(age);
								}
                             }
                           function showMe() {
                                var x =$( "#experience option:selected" ).text();
                             	if(x == 'Experienced'){
                             	$('.expcls').show();
                             	}
                             	else {
                             		$('.expcls').hide();
                             	}
                             }
                            </script>
				
                <div class="row">
                    <section id="forms">
                        <!-- TODO Multilingual form action support ? -->
                        <form class="form-horizontal mt32" action="/jobs/thankyou" method="post" enctype="multipart/form-data">
                            <input type="hidden" t-att-value="job and job.department_id.id or False" name="department_id"/>
                            <input type="hidden" t-att-value="job and job.id or False" name="job_id"/>
                            <h3>Your Contact Information</h3>
                            <div t-attf-class="form-group #{error.get('partner_name') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="partner_name">Your Name</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('partner_name')" class="form-control" name="partner_name" required="True"/>
                                </div>
                            </div>
                            <div t-attf-class="form-group #{error.get('email_from') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="email_from">Email-id</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="email" t-att-value="default.get('email_from')" class="form-control" name="email_from" required="True"/>
                                </div>
                            </div>
                           
                            <div t-attf-class="form-group #{error.get('partner_mobile') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="partner_mobile">Mobile</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('partner_mobile')" class="form-control" name="partner_mobile" required="True"/>
                                </div>
                            </div>
                            
 							<div t-attf-class="form-group #{error.get('phone') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="phone">Landline</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('phone')" class="form-control" name="phone" />
                                </div>
                            </div>                            
                          
                           <h3>Your Personal Details</h3>
               			   <div t-attf-class="form-group #{error.get('dob') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="dob">Date of Birth</label>
                                <div class="col-md-7 col-sm-8">
                                    <input id="date" type="date" t-att-value="default.get('dob')" class="form-control" name="dob" required="True" onchange="calculateAge(this)" />
                                </div>
                            </div>
                            <input id="age" type="hidden" t-att-value="default.get('age')" class="form-control" name="age" />
                            <div t-attf-class="form-group #{error.get('gender') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="gender">Gender</label>
                                <div class="col-md-7 col-sm-8">
				                <select id="myselect" name="gender" t-att-value="default.get('gender')">
								  <option  value="male">Male</option>
								  <option value="female">Female</option>
								</select>
								</div>
							</div>
							<div t-attf-class="form-group #{error.get('current_location') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="current_location">Your Current Location</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('current_location')" class="form-control" name="current_location" />
                                </div>
                            </div>       
                            <h3>Your Current Employment Details</h3>
                            
                            <div t-attf-class="form-group #{error.get('experience') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="experience">Experience</label>
                                <div class="col-md-7 col-sm-8">
				                <select id="experience" name="experience" t-att-value="default.get('experience')" onchange="showMe()">
								  <option  value="fresher">Fresher</option>
								  <option value="experienced">Experienced</option>
								</select>
								</div>
							</div>
							
							<div  t-attf-class="form-group #{error.get('skills') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="skills">What are your Key Skills?</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" placeholder="Please enter your areas of expertise/specialization" t-att-value="default.get('skills')" class="form-control" name="skills"/>
                                </div>
                            </div>
							
							<div class="expcls" t-attf-class="form-group #{error.get('workedat') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="workdeat">Company</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('workedat')" class="form-control" name="workedat"/>
                                </div>
                            </div>
                            
                            
                            
                            <div class="expcls" t-attf-class="form-group #{error.get('roll') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="workdeat">Enter a Headline for your Profile</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" placeholder="Describe Your Professional Background in One-Line" t-att-value="default.get('roll')" class="form-control" name="roll"/>
                                </div>
                            </div>
							
							<div class="expcls" t-attf-class="form-group #{error.get('workexp') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="workdexp">Total Work Experience</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('workexp')" class="form-control" name="workexp"/>
                                </div>
                            </div>
                            
                            <div class="expcls" t-attf-class="form-group #{error.get('notice_period') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="notice_period">Current Employer Notice Period</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('notice_period')" class="form-control" name="notice_period"/>
                                </div>
                            </div>
                            
                            <div class="expcls" t-attf-class="form-group #{error.get('current_ctc') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="current_ctc">Current CTC</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('current_ctc')" class="form-control" name="current_ctc"/>
                                </div>
                            </div>
                            
                             <div class="expcls" t-attf-class="form-group #{error.get('expected_ctc') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="expected_ctc">Expected CTC</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('expected_ctc')" class="form-control" name="expected_ctc"/>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="col-md-3 col-sm-4 control-label" for="description">Short Introduction</label>
                                <div class="col-md-7 col-sm-8">
                                    <textarea  class="form-control" t-esc="default.get('description')" name="description" style="min-height: 120px"/>
                                </div>
                            </div>
                            
                            <h3>Your Education Background</h3>
                            
                            
                            <div t-attf-class="form-group #{error.get('qualification') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="qualification">Qualification</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('qualification')" placeholder="eg: B.Tech,M.Tech,B.com,M.com,MBA" class="form-control" name="qualification"/>
                                </div>
                            </div>
                            
                            <div t-attf-class="form-group #{error.get('specialization') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="specialization">Specialization</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('specialization')" placeholder="eg:ECE,ME,Instrumenation,Automation,Accounts" class="form-control" name="specialization"/>
                                </div>
                            </div>
                            
                           
                            
                            <div t-attf-class="form-group #{error.get('year') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="year">Year</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('year')" class="form-control" name="year"/>
                                </div>
                            </div>
                            
                            <div t-attf-class="form-group #{error.get('college') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="college">College</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('college')" class="form-control" name="college"/>
                                </div>
                            </div>
                            
                             <div t-attf-class="form-group #{error.get('university') and 'has-error' or ''}">
                                <label class="col-md-3 col-sm-4 control-label" for="year">University</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" t-att-value="default.get('university')" class="form-control" name="university"/>
                                </div>
                            </div>
                            
                             <h3>Upload Your Detailed Resume</h3>
                            
                            
                            <div class="form-group">
                                <label class="col-md-3 col-sm-4 control-label" for="ufile">Upload your Resume Document</label>
                                <div class="col-md-7 col-sm-8">
                                    <input class="input-file" id="fileInput" type="file" name="ufile"/>
                                    <span t-if="error.get('ufile')">Please send again your resume.</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </t>
</template>
</data>
</openerp>

