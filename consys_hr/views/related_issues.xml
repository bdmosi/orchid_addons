<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="related_issues_form">
		<field name="name">related issues form view</field>
		<field name="model">related.issues</field>
		<field name="arch" type="xml">
		<form string="Related Issues" version="7.0">
 			<sheet>
			<group>
					<field name="name" />
					<field name="symptoms" />
					<field name="solutions" />

			</group>
			</sheet>
		</form>
		</field>
		</record>

		<record model="ir.ui.view" id="related_issues_tree">
		<field name="name">related issues tree view</field>
		<field name="model">related.issues</field>
		<field name="arch" type="xml">
			<tree string="Related Issues">
					<field name="name" />
					<field name="symptoms" />
					<field name="solutions" />
			</tree>
		</field>
		</record>

		<record model="ir.ui.view" id="related_issues_search">
		<field name="name">related issues search view</field>
		<field name="model">related.issues</field>
		<field name="arch" type="xml">
			<search>
					<field name="name" />
					<field name="symptoms" />
					<field name="solutions" />
			</search>
		</field>
		</record>

		<record model="ir.ui.view" id="related_issues_graph">
		<field name="name">related issues graph view</field>
		<field name="model">related.issues</field>
		<field name="arch" type="xml">
			<graph>
					<field name="name" />
					<field name="symptoms" />
					<field name="solutions" />
			</graph>
		</field>
		</record>

		<record model="ir.actions.act_window" id="action_related_issues">
		<field name="name">Related Issues</field>
		<field name="res_model">related.issues</field>
		<field name="view_mode">tree,form,graph</field>
		</record>

		<menuitem name="Related Issues" 
	  		id="menu_related_issues" 
	  		parent="issuetracker_menu_general"
            action="action_related_issues" />

	</data>
</openerp>
