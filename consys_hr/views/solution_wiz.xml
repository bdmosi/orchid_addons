<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="solution_wiz">
		<field name="name">solution wiz wizard</field>
		<field name="model">solution.wiz</field>
		<field name="arch" type="xml">
		<form string="Solution Wiz" version="7.0">
			<group>
					<field name="date" />
					<field name="solution" />
					<field name="attachment" />

			</group>
			<footer>
				 <button name="create_solution" string="Send Reply" type="object" class="oe_highlight"/>
   					or
 				 <button string="Cancel" class="oe_link" special="cancel"/>
			</footer>
		</form>
		</field>
		</record>

		<record id="action_solution_wiz" model="ir.actions.act_window">
		<field name="name">Solution Wiz</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">solution.wiz</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="solution_wiz"/>
		<field name="target">new</field>
		</record>

		


	</data>
</openerp>
