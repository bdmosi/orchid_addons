<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

	<record model="ir.ui.view" id="hr_applicant_inherited_consyshr_form">
		<field name="name">hr applicant form view</field>
		<field name="model">hr.applicant</field>
		<field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job" />
		<field name="arch" type="xml">
				 <xpath expr="//div[contains(@class, 'oe_right oe_button_box')]" position="inside">
                    <button class="oe_inline oe_stat_button" name="cs_approval_mail"
                                string="Send E-mail" type="object"
                                icon="fa-bars"/>
                </xpath>
                <xpath expr="//field[@name='type_id']" position="replace">
                	<field name="dob" on_change="onchange_getage(dob)" />
                	<field name='age' />
                	<field name='gender' />
                	<field name='current_location' />
                	<field name='qualification' />
                	<field name='specialization' />
                	<field name='year' />
                	<field name='college' />
                	<field name='university' />
                	<field name='skills' />
                	<field name='experience' />
                	
                <group string="Experience Details" attrs="{'invisible': [('experience', '=', 'fresher')]}">
                	<field name='workedat' />
                	<field name='roll' />
                	<field name='workexp' />
                	<field name='notice_period' />
                	<field name='current_ctc' />
                	<field name='expected_ctc' />
                </group>
                	
                </xpath>
                

	 	</field>
	</record>
	</data>
</openerp>
