<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="request_wiz">
		<field name="name">request wiz wizard</field>
		<field name="model">request.wiz</field>
		<field name="arch" type="xml">
		<form string="Request Wiz" version="7.0">
			<group>
					<field name="name" />
					<field name="no_of_employee" />

			</group>
			<footer>
				<button name="create_job" string="Send Request" type="object" class="oe_highlight"/>
   				or
 				<button string="Cancel" class="oe_link" special="cancel"/>
			</footer>
		</form>
		</field>
		</record>

		<record id="action_request_wiz" model="ir.actions.act_window">
		<field name="name">Requesting Human Resources</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">request.wiz</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="request_wiz"/>
		<field name="target">new</field>
		</record>

		

	</data>
</openerp>
