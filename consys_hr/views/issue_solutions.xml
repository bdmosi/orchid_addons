<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="issue_solutions_form">
		<field name="name">issue solutions form view</field>
		<field name="model">issue.solutions</field>
		<field name="arch" type="xml">
		<form string="Issue Solutions" version="7.0">
 			<sheet>
			<group>
					<field name="issue_id" domain="[('issue_type','=','normal')]" />
					<field name="name" />
					<field name="date" />
					<field name="solution" />
					<field name="attachment" />
					<field name="solution_from" />
					<field name="solution_to" />

			</group>
			</sheet>
			<!--  <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
		</form>
		</field>
		</record>

		<record model="ir.ui.view" id="issue_solutions_tree">
		<field name="name">issue solutions tree view</field>
		<field name="model">issue.solutions</field>
		<field name="arch" type="xml">
			<tree string="Issue Solutions">
					<field name="name" />
					<field name="issue_id" />
					<field name="date" />
					<field name="solution_from" />
					<field name="solution_to" />
			</tree>
		</field>
		</record>

		<record model="ir.ui.view" id="issue_solutions_search">
		<field name="name">issue solutions search view</field>
		<field name="model">issue.solutions</field>
		<field name="arch" type="xml">
			<search>
					<field name="name" />
					<field name="issue_id" />
					<field name="date" />
					<field name="solution" />
					<field name="attachment" />
					<field name="solution_from" />
					<field name="solution_to" />
			</search>
		</field>
		</record>

		<record model="ir.ui.view" id="issue_solutions_graph">
		<field name="name">issue solutions graph view</field>
		<field name="model">issue.solutions</field>
		<field name="arch" type="xml">
			<graph>
					<field name="name" />
					<field name="issue_id" />
					<field name="date" />
					<field name="solution" />
					<field name="attachment" />
					<field name="solution_from" />
					<field name="solution_to" />
			</graph>
		</field>
		</record>

		<record model="ir.actions.act_window" id="action_issue_solutions">
		<field name="name">Issue Solutions</field>
		<field name="res_model">issue.solutions</field>
		<field name="domain">[('solution_type','=','normal')]</field>
		<field name="view_mode">tree,form,graph</field>
		</record>
