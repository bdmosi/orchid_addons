        <field name="res_model">beta.structures</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
         <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add new Structure. 
          </p>
        </field>
    </record>
    
