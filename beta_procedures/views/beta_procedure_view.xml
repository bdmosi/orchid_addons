    <record model="ir.ui.view" id="od_beta_docs_tree">
		<field name="name">beta.docs.tree.view</field>
		<field name="model">beta.docs</field>
		<field name="arch" type="xml">
			<tree string="Beta Documents" editable="top">
					<field name="sequence" widget="handle"/>
					<field name="name" required="1"/>
					<field name="company_id" />
					<field name="attach_file" filename="attach_fname" />
					<field name="issue_date" />
					<field name="expiry_date" />
			</tree>
		</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_od_beta_docs">
		<field name="name">Beta Documents</field>
		<field name="res_model">beta.docs</field>
		<field name="view_mode">tree</field>
