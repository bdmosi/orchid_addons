    <record model="ir.ui.view" id="od_beta_structures_tree">
        <field name="name">beta.structures.tree</field>
        <field name="model">beta.structures</field>
        <field name="arch" type="xml">
            <tree>
            	<field name="sequence" widget="handle"/>
            	<field name="name"/>
            	<field name="company_id" />
            </tree>
       </field>
    </record>

  <record model="ir.ui.view" id="od_beta_structures_form">
        <field name="name">beta.structures.form</field>
        <field name="model">beta.structures</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
	                <group>
	                   <label for="name"/>
	                   <h2><field name="name"/></h2>
	                   <field name="company_id" />
	                </group>
                  	<field name="image" widget="image" nolabel="1"/>
                  	<group string="Description" >
                		<field name="description" widget="html" nolabel="1"/>
                  	</group>
       			</sheet>
    		</form>
  </field>
 </record>
 
	<record model="ir.actions.act_window" id="action_od_beta_structures">
        <field name="name">Structure</field>
