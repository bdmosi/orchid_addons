                     <field name="user_id" context="{'default_groups_ref': ['base.group_partner_manager']}" string="Sales Account Manager" attrs="{'required':[('is_company','=',True)]}"/>
                  </field>

				<xpath expr="//field[@name='mobile']" position="after">
                    <field name="od_direct_no"/>
                </xpath>
